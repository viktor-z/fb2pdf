<project name="v3pdftools" default="all" basedir=".">

    <property environment="env"/>

    <property name="build_tools" location="${env.BUILD_TOOLS}"/>

    <property name="build" location="build"/>
    <property name="lib" location="lib"/>
    <property name="src" location="src"/>

    <path id="lib">
        <fileset dir="${lib}">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="compile" description="compile the source">
        <javac destdir="${build}" source="1.5" target="1.5" deprecation="on" fork="yes" debug="true" encoding="Cp1251">
            <compilerarg value="-Xlint:unchecked"/>
            <src path="${src}"/>

            <include name="org/trivee/**" />

            <classpath>
                 <path refid="lib"/>
            </classpath>
        </javac>
    </target>

    <target name="all" depends="compile" />

    <target name="runTest" depends="compile">
        <java classname="org.trivee.Test" fork="yes" >
            <classpath>
                <pathelement path="${build}"/>
                <path refid="lib"/>
            </classpath>
        </java>        
    </target>

    <target name="testColumn" depends="compile">
        <java classname="org.trivee.fb2pdf.testColumn" fork="yes" >
            <classpath>
                <pathelement path="${build}"/>
                <path refid="lib"/>
            </classpath>
        </java>        
    </target>

    <target name="ColumnControl" depends="compile">
        <java classname="org.trivee.fb2pdf.ColumnControl" fork="yes" >
            <classpath>
                <pathelement path="${build}"/>
                <path refid="lib"/>
            </classpath>
        </java>        
    </target>

    <target name="ColumnElements" depends="compile">
        <java classname="org.trivee.fb2pdf.ColumnElements" fork="yes" >
            <classpath>
                <pathelement path="${build}"/>
                <path refid="lib"/>
            </classpath>
        </java>        
    </target>

</project>
